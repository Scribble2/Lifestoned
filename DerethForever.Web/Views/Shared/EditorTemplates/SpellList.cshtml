@model List<Lifestoned.DataModel.Gdle.SpellbookEntry>

<div class="panel-heading"><h3 class="panel-title">Spells</h3></div>
<div class="panel-body panel-group">
    <input type="hidden" id="SpellCount" value="@Model?.Count ?? 0" />

    @if (Model == null)
    {
    <strong>This Weenie has no Spells. Click below to add one.</strong>
    }
    else
    {
    <div class="row row-spacer">
        <div class="col-md-4">@Html.Label("Spell Name")</div>
        <div class="col-md-3">@Html.Label("Probability")</div>
        <div class="col-md-1"></div>
    </div>
    }

    @for (int i = 0; i < (Model?.Count ?? 0); i++)
    {
        <div class="row row-spacer">
            <div class="col-md-4">
                @Html.Label(Model[i].GetSpellDescription())
                @Html.HiddenFor(m => m[i].SpellId)
                @Html.HiddenFor(m => m[i].Deleted)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m[i].Stats.CastingChance, new { @class = "form-control" })
            </div>
            <div class="col-md-1">@EditorHelpers.DeleteButton("removeSpell")</div>
        </div>
    }

</div>